{
    "name": "middlewares/aura-session",
    "type": "library",
    "description": "Middleware to manage sessions using Aura.Session",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "server",
        "http",
        "session",
        "aura.session"
    ],
    "homepage": "https://github.com/middlewares/aura-session",
    "support": {
        "issues": "https://github.com/middlewares/aura-session/issues"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "http-interop/http-middleware": "^0.4",
        "aura/session": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5 || ^6.0",
        "zendframework/zend-diactoros": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "^3.0",
        "middlewares/utils": "~0.8"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix ."
    }
}
